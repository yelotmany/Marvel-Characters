<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="view_model"
            type="com.yelotmany.marvelcharacters.features.viewmodel.CharactersListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_characters_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            application:items="@{view_model.items}"
            application:listScreenVisibility="@{view_model.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ProgressBar
            android:id="@+id/progressBar"
            application:progressBarVisibility="@{view_model.items}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/grey_dart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/error_screen"
            layout="@layout/fragment_characters_list_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            application:setScreenErrorVisibility="@{view_model.items}"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_characters_list_recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_characters_list_recycler_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>